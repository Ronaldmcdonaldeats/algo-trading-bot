# Trading Bot Production Configuration
# Copy to .env and fill in your values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_PASSWORD=change_this_password
DB_USER=trading_user
DB_NAME=trading_bot
DB_HOST=postgres
DB_PORT=5432

# ============================================================================
# BROKER CONFIGURATION
# ============================================================================

# Interactive Brokers
IB_ACCOUNT_ID=your_ib_account
IB_API_KEY=your_ib_api_key
IB_SECRET_KEY=your_ib_secret_key
IB_HOST=localhost
IB_PORT=7497

# Alpaca Trading
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Alpha Vantage
AV_API_KEY=your_alpha_vantage_key

# ============================================================================
# STRATEGY CONFIGURATION
# ============================================================================

STRATEGY_CONFIG=config/evolved_strategy_gen364.yaml
MODE=paper  # paper or live - DO NOT SET TO LIVE WITHOUT FULL TESTING

# ============================================================================
# MONITORING & ALERTS
# ============================================================================

LOG_LEVEL=INFO
ALERT_EMAIL=your_email@example.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
ALERT_ENABLED=true

# ============================================================================
# RISK MANAGEMENT
# ============================================================================

MAX_DAILY_LOSS_USD=5000
MAX_DAILY_LOSS_PCT=5
MAX_POSITION_PCT=0.1774
MAX_POSITIONS=20
KILL_SWITCH_ENABLED=true

# ============================================================================
# PERFORMANCE TARGETS
# ============================================================================

TARGET_ANNUAL_RETURN_PCT=7.0
TARGET_SHARPE_RATIO=1.05
MAX_ALLOWED_VARIANCE_PCT=5.0

# ============================================================================
# DEPLOYMENT
# ============================================================================

ENVIRONMENT=production
PYTHONUNBUFFERED=1
TZ=US/Eastern
